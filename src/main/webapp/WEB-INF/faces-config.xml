<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>ru</supported-locale>
        </locale-config>
            <message-bundle>com.vgorcinschi.rimmanew.messagebundles.messages</message-bundle>
        <resource-bundle>
            <base-name>com.vgorcinschi.rimmanew.messagebundles.messages</base-name>
            <var>copy</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>com.vgorcinschi.rimmanew.messagebundles.bigcopies</base-name>
            <var>bigcopy</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/appointment.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>booked</from-outcome>
            <to-view-id>/appConfirmation.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
